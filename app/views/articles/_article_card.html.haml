.col
  .card.shadow-sm.h-100
    .card-body.text-center.justify-content-between.d-flex.flex-column
      %div
        %a.text-decoration-none.text-dark{ href: article_path(article) }
          %h3.card-title= article.title
        %p.card-text= article.description
      .d-flex.justify-content-between.align-items-center.mt-3
        .btn-group
          - if article.user == current_user || current_user&.admin?
            = link_to 'Edit', edit_article_path(article), class: 'btn btn-sm btn-outline-secondary'
            = link_to 'Delete', article_path(article), class: 'btn btn-sm btn-outline-secondary', data: { "turbo-method": :delete, "turbo-confirm": 'Are you sure you want to delete this article?' }
        %small By <a href=#{user_path(article.user)} class="text-decoration-none text-primary"> #{article.user.username}</a>
