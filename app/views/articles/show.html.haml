%h2 Article show page
%p
  By #{@article.user.username}
%p
  Title: #{@article.title}
%p
  Description: #{@article.description}
- if logged_in? && @article.user == current_user
  .btn.btn-primary= link_to 'Edit', edit_article_path(@article), class: 'text-white text-decoration-none'
  .btn.btn-primary= button_to 'Delete', article_path(@article), :method => 'delete', class: 'text-white text-decoration-none'
