%header.p-3.text-bg-dark
  .container
    .d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
      %h1
        = link_to 'Alpha Blog', root_path, class: 'blog-title text-light pe-3'
      %ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
        %li
          = link_to 'About', about_path, class: "nav-link px-2 hover-primary #{is_active('/about')}"
        %li
          = link_to 'Articles', articles_path, class: "nav-link px-2 hover-primary #{is_active('/articles')}"
        - if logged_in?
          %li
            = link_to 'Users', users_path, class: "nav-link px-2 hover-primary #{is_active('/users')}"
      .text-end
        - if logged_in?
          = link_to current_user.username, user_path(current_user.id), class: 'btn btn-outline-light me-2'
          = link_to 'Logout', logout_path, class: 'btn btn-outline-light me-2', data: { "turbo-method": :delete }
        - else
          = link_to 'Login', login_path, class: 'btn btn-outline-light me-2'
          = link_to 'Sign-up', signup_path, class: 'btn btn-warning'
